<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/solicitud.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"/>
    <title>T&Q</title>
</head>
    <section class="solicitud">
        <div class="form-solicitud">
            <h2>Solicitud de servicio</h2>
            <form action="/solicitudes/add" method="post">
                <label for="numCard">Tipo de solicitud</label><br>
                <select name="tipo_de_solicitud" class="pais" id="">
                    <option value="sistema-competo">Test para un sistema completado</option>
                    <option value="sistema-en-onstruccion">Test para un sistema en construccion</option>
                    <option value="1-3">Test para entre 1 a 3 modulos de un sistema</option>
                    <option value="4-6">Test para entre 4 a 6 modulos de un sistema</option>
                    <option value="6..">Test para entre 6 o mas modulos de un sistema</option>
                </select>
                <label for="numCard">Tipo de prueba</label><br>
                <select name="prueba_solicitada" class="pais" id="">
                    <option value="manuales">Solo pruebas manuales</option>                    
                    <option value="automatizadas&manuales">Pruebas manuales y automatizadas</option>                    
                </select>
                <button>Hacer solicitud</button>
            </form>
        </div>
        <div class="form-img">
        </div>
    </section>