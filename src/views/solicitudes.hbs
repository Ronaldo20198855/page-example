<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/solicitudes.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"/>
    <title>T&Q</title>
</head>

<body>
    <section class="solicitudes">
        <h2>Solicitudes realizadas</h2> 
            <div class="tabla">
              <table class="table table-hover ">
              <thead class="head">
                <tr>
                  <th scope="col">Num. Solicitud</th>
                  <th scope="col">Tipo de solicitud</th>
                  <th scope="col">Tipo de prueba</th>
                  <th scope="col">Fecha de solicitud</th>
                  <th scope="col">Estado</th>
                </tr>
              </thead>
              <tbody class="body-t">
                    {{#each solicitudes}}       
                    <tr>
                        <td>{{ID_solicitud}}</td>
                        <td>{{tipo_de_solicitud}}</td>
                        <td>{{prueba_solicitada}}</td>
                        <td>{{timeago fecha_de_solicitud}}</td>
                        <td>{{estado_de_solicitud}}</td>
                    </tr>
                    {{/each}}
              </tbody>
            </table>
            <div class="accion">
              {{#if acceso}}
                  {{#each solicitudes}}
                  <td><a id="botone" class="btn btn-success" href="/solicitudes/aceptar/{{ID_solicitud}}">Aceptar</a></td>
                  <td><a id="botone" class="btn btn-danger" href="/solicitudes/negar/{{ID_solicitud}}">Negar</a></td>
                  {{/each}}
              {{/if}}
            </div>             
            </div>
        </section>   
</body>